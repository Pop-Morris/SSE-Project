generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Workflow {
  id            Int      @id @default(autoincrement())
  name          String
  category      String   
  triggerEvent  String   
  conditionType String   
  threshold     Float    
  actionType    String   
  actionValue   String   
  webhookId     Int?     
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}